{
  "name": "Node.js y MongoDB (Blog Backend)",
  "build": {
    "dockerfile": "../Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.wordWrap": "on",
        "editor.tabSize": 2
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode-remote.remote-containers",
        "apollographql.vscode-apollo"
      ]
    }
  },
  "postCreateCommand": "npm install",
  "remoteUser": "node",
  "forwardPorts": [4000]
}